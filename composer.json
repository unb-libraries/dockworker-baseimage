{
  "name": "unb-libraries/dockworker-baseimage",
  "description": "Provides functions related to building base docker images for applications.",
  "type": "library",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "unb-libraries/dockworker": "6.x-dev"
  },
  "require-dev": {
    "phpstan/phpstan": "^1",
    "squizlabs/php_codesniffer": "^3"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "UNB Libraries",
      "email": "libsupport@unb.ca"
    }
  ],
  "autoload": {
    "psr-4": {
      "Dockworker\\": "./src/"
    }
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
